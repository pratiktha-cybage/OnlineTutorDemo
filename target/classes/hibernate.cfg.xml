<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
 
 
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/onlineDB</property>
        <property name="show_sql">true</property>
        <property name="format_sql">false</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <mapping class="com.app.dto.Students"/>
        <mapping class="com.app.dto.Tutors"/>
        <mapping class="com.app.dto.StudentTutorMapping"/>
        <mapping class="com.app.dto.TrainingMaterial"/>
        <mapping class="com.app.dto.Category"/>
    </session-factory>
</hibernate-configuration>